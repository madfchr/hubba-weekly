    <%= f.label :industries %><br>
    <%= f.text_area :industries %>
  </p>

  <p>
    <%= f.label :common %><br>
    <%= f.text_area :common %>
  </p>

  <p>
    <%= f.submit %>
  </p>

  <% end %>

  <%= link_to 'Back', emails_path %>
